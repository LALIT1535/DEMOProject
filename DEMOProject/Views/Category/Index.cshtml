@model IEnumerable<DEMOProject.Models.Category>

@{
    ViewBag.Title = "Category List";
}

<h2>Category List</h2>

<div class="actions">
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Create New Category</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CategoryName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Category", new { id = item.CategoryId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Details", "Category", new { id = item.CategoryId })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", "Category", new { id = item.CategoryId })" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">No categories found.</td>
            </tr>
        }
    </tbody>
</table>

<div class="info">
    @if (ViewBag.TotalCategories != null)
    {
        <p>Total Categories: <strong>@ViewBag.TotalCategories</strong></p>
    }
</div>

<style>
    .actions {
        margin-bottom: 15px;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .btn {
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 3px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

    .btn-warning {
        background-color: #ffc107;
        color: black;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-sm {
        font-size: 0.8em;
    }

    .text-center {
        text-align: center;
    }
</style>
